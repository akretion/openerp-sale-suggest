<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

    <record model="ir.ui.view" id="sale_order_suggest_form">
        <field name="name">sale.order.suggest.form</field>
        <field name="model">sale.order.suggest</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <field name="id" />
            <field name="order_id" />
            <field name="line_ids">
            <tree string="Suggestions">
                <field name="product_id" />
                <field name="quantity" />
            </tree>
            </field>
            <group colspan="4">
                <button string="Cancel" special="cancel" />
                <button string="Add" name="add_suggestions" type="object" />
            </group>
        </field>
    </record>

</data>
</openerp>
